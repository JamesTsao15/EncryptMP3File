<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_chooseFile"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="150dp"
        android:text="選擇音訊檔案"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextKeyNumber"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="請輸入加密key(16為英數字混合)"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView_key"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="100dp"
        android:text="Key:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_fileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="選擇音檔:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chooseFile" />

    <Button
        android:id="@+id/button_encrypt"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="32dp"
        android:text="加密檔案"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fileName" />

    <Button
        android:id="@+id/button_keySetting"
        android:layout_width="128dp"
        android:layout_height="49dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="159dp"
        android:text="設定KEY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextKeyNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>